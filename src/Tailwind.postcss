@tailwind base;
@tailwind components;
@tailwind utilities;

@layer utilities {
  .text-start {
    text-align: start !important;
  }
  .text-end {
    text-align: end !important;
  }
  
  /* Some icons need to be mirrored for RTL languages. */
  [dir="rtl"] .reverse {
    transform: scaleX(-1);
  }
}
